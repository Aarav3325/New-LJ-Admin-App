 <resources xmlns:tools="http://schemas.android.com/tools">

     <!-- Base application theme. -->
     <style name="Theme.CollegeApp" parent="Theme.AppCompat.NoActionBar">
         <!-- Primary brand color. -->
         <item name="colorPrimary">@color/colorPrimary</item>
         <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
         <item name="colorAccent">@color/colorAccent</item>
         <!-- Secondary brand color. -->
         <item name="colorSecondary">@color/red2</item>
         <item name="colorSecondaryVariant">@color/pink</item>
         <item name="colorOnSecondary">@color/green1</item>
         <!-- Status bar color. -->
         <item name="android:statusBarColor" tools:targetApi="l">#D242EC</item>
         <!-- Customize your theme here. -->
     </style>
    <style name="Theme.CollegeApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.CollegeApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.CollegeApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>

